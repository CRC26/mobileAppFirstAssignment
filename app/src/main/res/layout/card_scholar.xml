<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="97dp"
            android:layout_height="84dp"
            android:layout_alignTop="@+id/scholarTitle"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/change_scholar_image" />

        <TextView
            android:id="@+id/scholarTitle"
            android:layout_width="263dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="132dp"
            android:textSize="30sp"
            tools:text="A Title" />

        <TextView
            android:id="@+id/gradeYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scholarTitle"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="-3dp"
            tools:text="A GradeYear" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>